[core]
  editor = nvim -c 'startinsert'
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore_global
  # pager = less

[init]
  defaultBranch = main

[push]
  default = simple
  # Automatically changes upstream to branch name
  autoSetupRemote = true


